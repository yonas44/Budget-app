<%= form_with(model: purchase, url: group_purchases_path(params[:group_id])) do |form| %>
  <% if purchase.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

      <ul>
        <% purchase.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, placeholder: 'Name of the item..' %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount, placeholder: 'Amount in USD', :required => true %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.select :group, @groups, { :include_blank => '-- Select One --' }, :required => true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>